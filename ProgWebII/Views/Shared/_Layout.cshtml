@{
    var name = Context.Session.GetString("UserName");
    var isAdmin = Context.Session.GetString("IsAdmin") == "1";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>AcademicEvents</title>
    <link rel="stylesheet" href="https://unpkg.com/missing.css@1.1.1/dist/missing.min.css">
    <style>
        header {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .flash {
            margin: 1rem 0;
            padding: .6rem;
            border: 1px solid #ddd
        }
    </style>
    <script>
        // pequeno efeito JS: alerta ao clicar para se inscrever
        function confirmInscription(evName) {
            return confirm("Confirmar inscrição em \"" + evName + "\"?");
        }
    </script>
</head>
<body>
    <header>
        <nav>
            <a href="/">Eventos</a>
            @if (name != null)
            {
                <a href="/Events/MyRegistrations">Minhas inscrições</a>
                if (isAdmin)
                {

                    <a href="/Admin">Admin</a>
                }
            }
        </nav>
        <div>
            @if (name == null)
            {
                <a href="/Account/Login">Entrar</a> 
                <a href="/Account/Register">Cadastrar</a>
            }
            else
            {
                <span>Olá, @name!</span>
                <a href="/Account/Logout">Sair</a>
            }
        </div>
    </header>
    <main class="container">
        @RenderBody()
    </main>
</body>
</html>
