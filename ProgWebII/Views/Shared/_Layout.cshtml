@{
    var name = Context.Session.GetString("UserName");
    var isAdmin = Context.Session.GetString("IsAdmin") == "1";
}
<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <title>AcademicEvents</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        .flash {
            margin: 1rem 0;
            padding: .8rem 1rem;
            border-radius: .5rem;
        }

            .flash.success {
                background-color: #d1e7dd;
                color: #0f5132;
            }

            .flash.warn {
                background-color: #fff3cd;
                color: #664d03;
            }

            .flash.error {
                background-color: #f8d7da;
                color: #842029;
            }
    </style>

    <script>
        function confirmInscription(evName) {
            return confirm("Confirmar inscrição em \"" + evName + "\"?");
        }
    </script>
</head>
<body class="d-flex flex-column min-vh-100">
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top">
        <div class="container">
            <a class="navbar-brand fw-bold" href="/">AcademicEvents</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
                    aria-controls="navbarContent" aria-expanded="false" aria-label="Alternar navegação">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Eventos</a>
                    </li>
                    @if (name != null)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Events/MyRegistrations">Minhas inscrições</a>
                        </li>
                        if (isAdmin)
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="/Admin">Admin</a>
                            </li>
                        }
                    }
                </ul>

                <ul class="navbar-nav ms-auto">
                    @if (name == null)
                    {
                        <li class="nav-item">
                            <a class="btn btn-light me-2" href="/Account/Login">Entrar</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-outline-light" href="/Account/Register">Cadastrar</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item d-flex align-items-center me-2 text-white">
                            Olá, @name!
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-outline-light" href="/Account/Logout">Sair</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main -->
    <main class="container flex-grow-1" style="margin-top: 80px;">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-light text-center text-muted py-3 mt-auto border-top">
        <div class="container">
            <small>&copy; @DateTime.Now.Year AcademicEvents — Todos os direitos reservados.</small>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
