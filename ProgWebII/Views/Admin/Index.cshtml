@{
    @model IEnumerable<AcademicEvents.Models.Event>
    <h2>Admin - Eventos</h2>
    <p><a class="button" href="/Admin/Create">Novo evento</a></p>
    <table>
        <thead><tr><th>Nome</th><th>Data</th><th>Local</th><th>Ações</th></tr></thead>
        <tbody>
            @foreach (var e in Model)
            {
                <tr>
                    <td>@e.Name</td>
                    <td>@e.Date.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@e.Location</td>
                    <td>
                        <a href="/Admin/Edit/@e.Id">Editar</a> |
                        <a href="/Admin/Delete/@e.Id">Excluir</a> |
                        <a href="/Admin/Registrations/@e.Id">Inscritos</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

}
