@model IEnumerable<AcademicEvents.Models.Event>

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="mb-0">Admin · Eventos</h3>
        <a asp-controller="Admin" asp-action="Create" class="btn btn-success">
            Novo evento
        </a>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">Nenhum evento cadastrado ainda.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Nome</th>
                        <th style="width:200px;">Data</th>
                        <th style="width:260px;">Local</th>
                        <th style="width:260px;" class="text-end">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var e in Model)
                    {
                        var passado = e.Date < DateTime.Now;
                        <tr>
                            <td class="fw-medium">
                                @e.Name
                                @if (passado)
                                {
                                    <span class="badge bg-secondary ms-2">Encerrado</span>
                                }
                                else
                                {
                                    <span class="badge bg-success ms-2">Ativo</span>
                                }
                            </td>
                            <td>@e.Date.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>@e.Location</td>
                            <td class="text-end">
                                <div class="btn-group" role="group" aria-label="Ações">
                                    <a asp-controller="Admin" asp-action="Edit" asp-route-id="@e.Id" class="btn btn-sm btn-warning">Editar</a>
                                    <a asp-controller="Admin" asp-action="Delete" asp-route-id="@e.Id" class="btn btn-sm btn-outline-danger">Excluir</a>
                                    <a asp-controller="Admin" asp-action="Registrations" asp-route-id="@e.Id" class="btn btn-sm btn-outline-primary">Inscritos</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
