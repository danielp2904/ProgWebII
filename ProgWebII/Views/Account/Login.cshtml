@{
    @model AcademicEvents.ViewModels.LoginViewModel
    <h2>Login</h2>
    <form method="post">
        <label>E-mail <input asp-for="Email" /></label>
        <span asp-validation-for="Email"></span>
        <label>Senha <input asp-for="Password" type="password" /></label>
        <span asp-validation-for="Password"></span>
        <label><input asp-for="RememberMe" type="checkbox" /> Lembrar</label>
        <button type="submit">Entrar</button>
    </form>
}
