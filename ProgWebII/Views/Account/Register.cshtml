@{
    @model AcademicEvents.ViewModels.RegisterViewModel
    <h2>Cadastro</h2>
    <form method="post">
        <label>Nome <input asp-for="Name" /></label>
        <span asp-validation-for="Name"></span>
        <label>E-mail <input asp-for="Email" /></label>
        <span asp-validation-for="Email"></span>
        <label>Senha <input asp-for="Password" type="password" /></label>
        <span asp-validation-for="Password"></span>
        <button type="submit">Cadastrar</button>
    </form>

}
