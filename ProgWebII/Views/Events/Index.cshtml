@model IEnumerable<AcademicEvents.Models.Event>

<div class="container mt-5">
    <h3 class="mb-4">Eventos</h3>

    @if (TempData["msg"] != null)
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            @TempData["msg"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-secondary">Nenhum evento disponível no momento.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Nome</th>
                        <th style="width:200px;">Data</th>
                        <th style="width:260px;">Local</th>
                        <th class="text-end" style="width:190px;">Inscrição</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var e in Model)
                    {
                        var passado = e.Date < DateTime.Now;
                        <tr>
                            <td class="fw-medium">
                                @e.Name
                                @if (passado)
                                {
                                    <span class="badge bg-secondary ms-2">Encerrado</span>
                                }
                                else
                                {
                                    <span class="badge bg-success ms-2">Aberto</span>
                                }
                            </td>
                            <td>@e.Date.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>@e.Location</td>
                            <td class="text-end">
                                <form asp-action="Register"
                                      asp-controller="Events"
                                      asp-route-id="@e.Id"
                                      method="post"
                                      asp-antiforgery="true"
                                      onsubmit="return confirmInscription('@e.Name')"
                                      class="d-inline">
                                    <button class="btn btn-primary btn-sm"
                                            @(passado ? "disabled" : null)
                                            title="@(passado ? "Evento encerrado" : "Confirmar inscrição")">
                                        Inscrever-se
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@section Scripts {
    <script>
        function confirmInscription(nomeEvento) {
            return confirm(`Confirmar inscrição no evento: ${nomeEvento}?`);
        }
    </script>
}
