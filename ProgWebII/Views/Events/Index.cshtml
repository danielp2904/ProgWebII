@{
    @model IEnumerable<AcademicEvents.Models.Event>
    <h2>Eventos</h2>

    @if (TempData["msg"] != null)
    {
        <div class="flash">@TempData["msg"]</div>
    }

    <table>
        <thead><tr><th>Nome</th><th>Data</th><th>Local</th><th></th></tr></thead>
        <tbody>
            @foreach (var e in Model)
            {
                <tr>
                    <td>@e.Name</td>
                    <td>@e.Date.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@e.Location</td>
                    <td>
                        <form asp-action="Register" asp-controller="Events" method="post" onsubmit="return confirmInscription('@e.Name')">
                            <input type="hidden" name="id" value="@e.Id" />
                            <button>Inscrever-se</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

}
