@{
    @model IEnumerable<AcademicEvents.Models.Registration>
    <h2>Minhas inscrições</h2>
    <table>
        <thead><tr><th>Evento</th><th>Data</th><th>Local</th><th>Inscrito em</th></tr></thead>
        <tbody>
            @foreach (var r in Model)
            {
                <tr>
                    <td>@r.Event!.Name</td>
                    <td>@r.Event!.Date.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@r.Event!.Location</td>
                    <td>@r.RegisteredAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</td>
                </tr>
            }
        </tbody>
    </table>

}
